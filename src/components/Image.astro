---
export interface Props {
    src: string;
    alt?: string;
    width?: number | string;
    height?: number | string;
    className?: string;
    loading?: 'lazy' | 'eager';
    style?: string;
}

const {
    src,
    alt = '',
    width,
    height,
    className = '',
    loading = 'lazy',
    style = ''
} = Astro.props as Props;
---

<img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={loading}
    decoding="async"
    style={style}
/>

